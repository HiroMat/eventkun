

<div>
  <div>
    <p><FONT size = "5"><b>イベント名: </b><%= @event.name %></FONT></p>
    <p><FONT size = "5"><b>　日時　　: </b> <!-- 日時を表示 --> </FONT>
    <p><FONT size = "5"><b>　備考　　: </b><%= @event.description %></FONT></p>
  </div>
   
  <div>
    <p>
      <%= link_to '編集', edit_event_path(@event) %> |
      <%= link_to '削除', @event, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to '戻る', events_path %>
    </p>
  </div>
  
  <div>
    <h3>参加者リスト</h3>
    <% @comments.each do |comment| %>
  
    <div>
      <p>
        <strong><%= comment.user_name %></strong>
        <%= comment.body %>
        <%= link_to '削除', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
      </p>
    </div>
    <% end %>
    <%= render 'comments/form' %>
    
  </div>

 
</div>
