
<div class="row">
  <div class="col-md-9">
    <%= image_tag(@event.picture_url, width: '100%') if @event.picture.present? %>
    <h3>Comments</h3>
    <% @comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <br />
      <p><%= comment.body %></p>
      <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
     </div>
    <% end %>
    <%= render 'comments/form' %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @event.name %></p>
    <p><b>Description: </b><%= @event.description %></p>
    <p>
      <%= link_to 'Edit', edit_event_path(@event) %> |
      <%= link_to 'Destroy', @event, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', event_path %>
    </p>
  </div>
</div>