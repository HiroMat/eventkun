<script type="text/javascript" src="http://www.google.com/jsapi"></script>
<script type="text/javascript">google.load("jquery", "1.3.2");</script>
<script type="text/javascript">
$(document).ready(function(){
  $("table").each(function(){
    jQuery(this).find("tr:even").addClass("even");
  });
});
</script>

<table border>
  <caption>全社員対象イベント</caption>
  <tr>
    <th>1.イベント名</th> <th>2.開始日時  </th> <th>3.終了日時</th>  <th>4.備考</th>
  </tr>
  <% @events.in_groups_of(1) do |group| %>
 
      <% group.compact.each do |event| %>
      
          <tr>
            <td><%= link_to event.name, event %></td> <td><%=  event.startdate.strftime("%Y-%m-%d %H:%M") %></td> <td><%=  event.enddate.strftime("%Y-%m-%d %H:%M") %></td>　<td><%= event.description %></td>
          </tr>
       
      <% end %>
    
  <% end %>
</table>

<br>
<p><FONT size = "5"><b>関係者向けのイベントは</b><%= link_to 'こちら', pages_executive_path  %></FONT></p>

