<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
   <% end %>

  <div class="field">
    <%= f.label :イベント名 %><br>
    <%= f.text_field :name %>
  </div>

 　<div class="field">
    <%= f.label :開始時刻 %><br>
    <%= f.datetime_select :startdate %>
  </div>

  <div class="field">
    <%= f.label :終了時刻 %><br>
    <%= f.datetime_select :enddate %>
  </div>

  <br>
  
  <div class="field">
    <%= f.label :備考 %><br>
    <%= f.text_area :description %>
  </div>  
  
  <br>
  
  <p>公開範囲<br>
    <label><%= f.radio_button :AoE, "1" %>全社</label>
    <label><%= f.radio_button :AoE, "2" %>関係者</label>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
<% end %>
